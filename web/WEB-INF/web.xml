    <servlet>
        <servlet-name>GetUserInfo</servlet-name>
        <servlet-class>main.java.Controller.Api.User.GetSingleUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUserInfo</servlet-name>
        <url-pattern>/user</url-pattern>
